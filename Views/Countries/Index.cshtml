@model IEnumerable<CountriesOftheWorld.Models.CountryInfo>
@{
    ViewBag.Title = "Index";
}

<link href="~/Scripts/DataTables-1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="container">
    <div class="row header" style="text-align:center;color:green">
        <h2>All Countries</h2>
    </div>
    <table class="table table-striped table-bordered " style="width:100%" id="fulltable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Region</th>
                <th>Sub Region</th>
            </tr>
        </thead>
        <tbody>
        </tbody>

    </table>

    <table class="table table-striped table-bordered " style="width:100%; display: none" id="countryInfo">

        <thead>
            <tr>
                <th>Name</th>
                <th>Capital</th>
                <th>Population</th>
                <th>Currencies</th>
                <th>Languages</th>
                <th>Borders</th>
            </tr>
        </thead>

        <tbody>
        </tbody>

    </table>

    <table class="table table-striped table-bordered " style="width:100%; display: none" id="region">

        <thead>
            <tr>
                <th>Region Name</th>
                <th>Population</th>
                <th>Countries</th>
                <th>Subregion</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>

</div>


@section scripts{
    <script src="~/Scripts/DataTables-1.12.1/js/jquery.dataTables.min.js"></script>
   
    <script>

        $(document).ready(function () {

            $("#fulltable").DataTable({
                "ajax": {
                    "url": "/Countries/GetCountries",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [

                    {
                        "data": "name",
                        "autoWidth": true,
                        "searchable": true,
                        "render": function (data, type, row, meta) {
                            return '<a href="#" class="name">' + data + '</a>';
                        }
                    },
                    {
                        "data": "region",
                        "autoWidth": true,
                        "searchable": true,
                        "render": function (data, type, row, meta) {
                            return '<a href="#" class="region">' + data + '</a>';
                        }
                    },
                    {
                        "data": "subregion",
                        "autoWidth": true,
                        "searchable": true,
                        "render": function (data, type, row, meta) {
                            return '<a href="#" class="subregion" value="Subregion">' + data + '</a>';
                        }
                    },
                ],
                "pagingType": 'full_numbers',
                "order": [0, "asc"],
                "processing": "true",
                "language": {
                    "processing": "processing... please wait"
                }
            });

        });

        $('#fulltable tbody').on('click', '.name', function () {

           
            var table = $('#fulltable').DataTable();
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();

            $("#fulltable").hide();

            $("#region").hide();    
            
            $("#countryInfo").show();           

            $("#countryInfo").DataTable({

                "ajax": {
                    "url": "/Countries/GetCountryInfo",
                    "type": "GET",
                    "data": { countryname: data.name },
                    "datatype": "json"
                },
               
                "columns": [

                    {
                        "data": "name",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "capital",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "population",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "currencies[, ].name",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "languages[, ].name",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "borders",
                        "autoWidth": true,
                        "searchable": true,
                        "render": function (data, type, row, meta) {
                            return '<a href="#" class="name">' + data + '</a>';
                        },
                    },
                ],

                "order": [0, "asc"],
                "processing": "true",
                "language": {
                    "processing": "processing... please wait"
                }
            });
          
            });

        $('#fulltable tbody').on('click', '.region', function () {
            var table = $('#fulltable').DataTable();
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();

            $("#fulltable").hide();

            $("#countryInfo").hide();     

            $("#region").show();     

            $("#region").DataTable({

                "ajax": {
                    "url": "/Countries/GetRegions",
                    "type": "GET",
                    "data": { region: data.region },
                    "datatype": "json"                  
                },
               
                "columns": [

                    {
                        "data": "regionname",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "population",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "name",
                        "autoWidth": true,
                        "searchable": true,
                        "render": function (data, type, row, meta) {
                            return '<a href="' + data + '">' + data + '</a>';
                        },
                    },
                    {
                        "data": "subregion",
                        "autoWidth": true,
                        "searchable": true,
                        "render": function (data, type, row, meta) {
                            return '<a href="' + data + '">' + data + '</a>';
                        },
                    },
                    
                ],
                
                "order": [0, "asc"],
                "processing": "true",
                "language": {
                    "processing": "processing... please wait"
                }
            });
          
        });

    </script>


}